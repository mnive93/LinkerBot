
<script type="text/javascript">
$(document).ready(function() {
  $('#postform').submit(function(e) {
  e.preventDefault();
  $.ajax({
    type: 'POST',
    url: '/post/',
    data: $('#postform').serialize(),
    dataType: 'json',
    success: function() {}
 });
 return false;
 });
});
</script>
<form name='postform'  id = "postform" method='POST'>
	{% csrf_token %}
        {{ form.content }}
       
<header>
<h2>Share your favourite sites here</h2>
</header>	
<input type = "submit" value="Post" id="post_button" class= " post_button button "  />
</form>
